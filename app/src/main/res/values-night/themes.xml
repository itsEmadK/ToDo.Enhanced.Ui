<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.ToDoEnhancedUi" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
    </style>

    <style name="RecyclerItemBackground">
        <item name="android:background">@color/recyclerItemBackgroundNight</item>
    </style>

    <style name="DayNightTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DayNightCheckBox">
        <item name="android:buttonTint">@color/colorPrimaryNight</item>
    </style>

    <style name="DayNightDocumentIcon">
        <item name="android:src">@drawable/document_icon_night</item>
    </style>

    <style name="DayNightDivider">
        <item name="dividerColor">@color/dividerColorNight</item>
    </style>

    <style name="DayNightScreenBackground">
        <item name="android:background">@color/nightBackground</item>
    </style>

    <style name="DayNightHomeScreenHeader">
        <item name="android:src">@drawable/home_screen_header_night</item>
    </style>

    <style name="DayNightButton">
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/colorPrimaryNight</item>
    </style>

    <style name="DayNightAddScreenHeader">
        <item name="android:src">@drawable/add_task_screen_header_night</item>
    </style>

    <style name="DayNightEditText">
        <item name="android:background">@drawable/shape_edittext_night</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DayNightCloseIcon">
        <item name="android:src">@drawable/close_icon_night</item>
    </style>

    <style name="DayNightDateInputEditText" parent="DayNightEditText">
        <item name="android:drawableRight">@drawable/calendar_icon_night</item>
    </style>

    <style name="DayNightTimeInputEditText" parent="DayNightEditText">
        <item name="android:drawableRight">@drawable/clock_icon_night</item>
    </style>

    <style name="DayNightTextInputLayout" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox">
        <item name="boxBackgroundColor">@color/editTextBackgroundNight</item>
    </style>

    <style name="DayNightTextInputLayoutTextAppearance">
        <item name="android:textColor">@color/editTextStrokeNight</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="DayNightDeleteIcon">
        <item name="android:src">@drawable/delete_icon_night</item>
    </style>
</resources>